<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/test_menu_bg">

            <ImageView
                android:layout_width="@dimen/back_size"
                android:layout_height="@dimen/back_size"
                android:layout_gravity="center"
                android:src="@drawable/back1" />
        </FrameLayout>

        <TextView
            android:id="@+id/test_a"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pink_bt_bg"
            android:gravity="center"
            android:onClick="testConnect"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="连接成功"
            android:textColor="@color/app_white_color"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test_m"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pink_bt_bg"
            android:gravity="center"
            android:onClick="testConnect"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="进入标定"
            android:textColor="@color/app_white_color"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test_b"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pink_bt_bg"
            android:gravity="center"
            android:onClick="testBiaoding1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="完成标定1"
            android:textColor="@color/app_white_color"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test_c"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pink_bt_bg"
            android:gravity="center"
            android:onClick="testBiaoding2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="完成标定2"
            android:textColor="@color/app_white_color"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test_d"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pink_bt_bg"
            android:gravity="center"
            android:onClick="testTest"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="开始测试"
            android:textColor="@color/app_white_color"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test_score"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/pink_bt_bg"
            android:gravity="center"
            android:onClick="testResult"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="测试成绩"
            android:textColor="@color/app_white_color"
            android:textSize="15dp"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/test_menu_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="身高体重测试仪"
            android:textColor="@color/app_white_color"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <LinearLayout
                    android:id="@+id/result_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/code_et"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/test_code_et"
                            android:gravity="center_vertical"
                            android:hint="请输入完整学号"
                            android:inputType="number"
                            android:paddingLeft="12dp"
                            android:textColor="@color/app_white_color"
                            android:textColorHint="@color/app_white_color"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/result_clear"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/test_code_darken_et"
                                android:gravity="center"
                                android:text="清除"
                                android:textColor="@color/app_white_color"
                                android:textSize="@dimen/common_small_size" />

                            <TextView
                                android:id="@+id/result_ok"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/test_code_darken_et"
                                android:gravity="center"
                                android:text="确定"
                                android:textColor="@color/app_white_color"
                                android:textSize="@dimen/common_small_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/result_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/test_avatar"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/head" />

                    <ImageView
                        android:id="@+id/test_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/delete3" />

                    <TextView
                        android:id="@+id/result_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/test_delete"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="20dp"
                        android:text="周大国"
                        android:textColor="@color/app_white_color"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/result_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一年级二班"
                            android:textColor="@color/app_white_color"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/result_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000000555"
                            android:textColor="@color/app_white_color"
                            android:textSize="22dp" />
                    </LinearLayout>

                </RelativeLayout>
            </FrameLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:background="@color/screen_settings" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15">

                <LinearLayout
                    android:id="@+id/configure_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/biaoding_et"
                                android:layout_width="250dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/test_code_et"
                                android:gravity="center_vertical"
                                android:hint="请输入第一次的标定值"
                                android:inputType="number"
                                android:paddingLeft="12dp"
                                android:textColor="@color/app_white_color"
                                android:textColorHint="@color/app_white_color"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/biaoding_confirm"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/pink_bt_bg"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="开始标定"
                                android:textColor="@color/app_white_color"
                                android:textSize="@dimen/common_big_size"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/common_operation_height"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:text="连接/测试状态:"
                                android:textColor="@color/app_white_color"
                                android:textSize="@dimen/common_big_size"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/device_status"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/common_operation_height"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="未知"
                                android:textColor="@color/app_pink_bg"
                                android:textSize="@dimen/common_big_size"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/device_connect"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/pink_bt_bg"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="连接设备"
                                android:textColor="@color/app_white_color"
                                android:textSize="@dimen/common_big_size"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/common_operation_height"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:text="开始测试"
                            android:textColor="@color/app_white_color"
                            android:textSize="@dimen/common_big_size" />
                        <!--单项查询-->
                        <FrameLayout
                            android:id="@+id/menu_start"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_height"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/pink_bt_bg"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/menu_start_icon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/start" />

                            <TextView
                                android:id="@+id/menu_start_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/start"
                                android:text="等待接收成绩..."
                                android:textColor="@color/app_white_color"
                                android:textSize="24dp"
                                android:visibility="gone" />

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/result_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="身高"
                            android:textColor="@color/app_white_color"
                            android:textSize="25dp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/height_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="180"
                                android:textColor="@color/app_pink_bg"
                                android:textSize="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="cm"
                                android:textColor="@color/app_white_color"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/result_cancel"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/test_code_darken_et"
                            android:gravity="center"
                            android:text="取消"
                            android:textColor="@color/app_white_color"
                            android:textSize="@dimen/common_small_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="体重"
                            android:textColor="@color/app_white_color"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/weight_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="@color/app_darken_bg"
                                android:textSize="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="kg"
                                android:textColor="@color/app_white_color"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/result_save"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/test_code_darken_et"
                            android:gravity="center"
                            android:text="保存"
                            android:textColor="@color/app_white_color"
                            android:textSize="@dimen/common_small_size" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/screen_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="9">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">

                    <FrameLayout
                        android:layout_width="157dp"
                        android:layout_height="157dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="157dp"
                            android:layout_height="157dp"
                            android:layout_gravity="center"
                            android:background="@drawable/white_round" />

                        <com.android.student.data.test.project.RoundCornerContainer
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <com.android.student.data.test.project.weightheight.HeightTestRule
                                android:id="@+id/height_view"
                                android:layout_width="78.5dp"
                                android:layout_height="157dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="40dp" />

                        </com.android.student.data.test.project.RoundCornerContainer>

                        <TextView
                            android:id="@+id/test_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="32dp"
                            android:text="0"
                            android:textColor="@color/indicateColor"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="#ff0000" />
                    </FrameLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="身高:"
                        android:textColor="@color/app_white_color"
                        android:textSize="24dp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="cm"
                        android:textColor="@color/app_white_color"
                        android:textSize="24dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/animate_view"
                    android:layout_width="@dimen/gif_size"
                    android:layout_height="@dimen/gif_size"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:background="@color/screen_settings" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp">

                        <FrameLayout
                            android:layout_width="157dp"
                            android:layout_height="157dp"
                            android:layout_gravity="center">

                            <View
                                android:layout_width="157dp"
                                android:layout_height="157dp"
                                android:layout_gravity="center"
                                android:background="@drawable/arc_bg" />

                            <com.android.student.data.test.project.weightheight.WeightTestView
                                android:id="@+id/weight_view"
                                android:layout_width="@dimen/weight_size"
                                android:layout_height="@dimen/weight_size"
                                android:layout_gravity="center" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:background="@drawable/arc_dock" />

                            <ImageView
                                android:id="@+id/weight_point"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="20dp"
                                android:src="@mipmap/zhizhen" />
                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/weight_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="体重:"
                                android:textColor="@color/app_white_color"
                                android:textSize="24dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="kg"
                                android:textColor="@color/app_white_color"
                                android:textSize="24dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right|bottom"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/weight_icon" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
