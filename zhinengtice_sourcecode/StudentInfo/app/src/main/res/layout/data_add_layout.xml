<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />

    <com.android.student.data.test.HomeScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="学号:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/code_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/clasz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="年级:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/class_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="班级:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/grade_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/another_area"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成绩:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/score_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/weight_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="身高:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/height_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="身份证:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/idcard_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="民族:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/race_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_area"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jiguan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="籍贯:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/jiguan_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="家庭住址:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/address_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="职务:"
                    android:textColor="@color/app_white_color"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/job_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/test_menu_bg"
                    android:paddingLeft="5dp"
                    android:textColor="@color/app_pink_bg"
                    android:textColorHint="@color/app_pink_bg"
                    android:textSize="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/radio_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_boy_radio"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/radio_select"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="男"
                        android:textColor="@color/app_white_color"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/radio_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_girl_radio"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/radio_deselect"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="女"
                        android:textColor="@color/app_white_color"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/confirm_add"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_bt">

                <TextView
                    android:id="@+id/confirm_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="确认添加"
                    android:textColor="@color/app_white_color"
                    android:textSize="26dp" />
            </FrameLayout>
        </LinearLayout>
    </com.android.student.data.test.HomeScrollView>
</LinearLayout>