<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/app_white_color"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/avatar_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/excel_attribute_color"
                android:textSize="24dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="吉克隽逸"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="00001"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/classes"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="班级"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一班"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/analysis"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/app_pink_bg"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="体重"
            android:textColor="@color/excel_attribute_color"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/height"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="身高"
            android:textColor="@color/excel_attribute_color"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/idcard"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="身份证"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/race"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="民族"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/jiguan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="籍贯"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="家庭住址"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/job"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="职务"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/biaozhun"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="优秀"
            android:textColor="@color/excel_attribute_color"
            android:textSize="24dp"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>