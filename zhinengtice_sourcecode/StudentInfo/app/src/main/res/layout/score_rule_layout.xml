<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="优  秀"
                android:textColor="@color/app_white_color"
                android:textSize="@dimen/common_big_size" />

            <EditText
                android:id="@+id/youxiu_et"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/search_single_container"
                android:background="@drawable/app_green_bt"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/app_pink_bg"
                android:textColorHint="@color/app_pink_bg"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="良  好"
                android:textColor="@color/app_white_color"
                android:textSize="@dimen/common_big_size" />

            <EditText
                android:id="@+id/lianghao_min_et"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/search_single_container"
                android:background="@drawable/app_green_bt"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/app_pink_bg"
                android:textColorHint="@color/app_pink_bg"
                android:textSize="18dp" />

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:background="@color/app_darken_bg" />

            <EditText
                android:id="@+id/lianghao_max_et"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/search_single_container"
                android:background="@drawable/app_green_bt"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/app_pink_bg"
                android:textColorHint="@color/app_pink_bg"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="及  格"
                android:textColor="@color/app_white_color"
                android:textSize="@dimen/common_big_size" />

            <EditText
                android:id="@+id/jige_min_et"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/search_single_container"
                android:background="@drawable/app_green_bt"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/app_pink_bg"
                android:textColorHint="@color/app_pink_bg"
                android:textSize="18dp" />

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:background="@color/app_darken_bg" />

            <EditText
                android:id="@+id/jige_max_et"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/search_single_container"
                android:background="@drawable/app_green_bt"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/app_pink_bg"
                android:textColorHint="@color/app_pink_bg"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="不 及 格"
                android:textColor="@color/app_white_color"
                android:textSize="@dimen/common_big_size" />

            <EditText
                android:id="@+id/cha_min_et"
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/search_single_container"
                android:background="@drawable/app_green_bt"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/app_pink_bg"
                android:textColorHint="@color/app_pink_bg"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rule_boy"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/radio_select_plat"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/app_white_color"
                android:textSize="@dimen/common_big_size" />

            <TextView
                android:id="@+id/rule_girl"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:background="@color/start_upload"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/app_white_color"
                android:textSize="@dimen/common_big_size" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_bt"
                android:gravity="center"
                android:text="确定男生"
                android:textColor="@color/app_white_color"
                android:textSize="@dimen/common_big_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>